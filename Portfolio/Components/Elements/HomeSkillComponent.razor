<Link To="@Link" Target="Target.Blank" Style="text-decoration: none; color: inherit; max-width: 5rem; padding-left: 0.5rem; 
    padding-right: 0.5rem; margin: 0.25rem; display: flex; justify-content: center; align-items: center; flex-direction: column;">
    <Tooltip Text="@Name" Placement="TooltipPlacement.TopEnd" >
        <Image Source=@($"./icons/{Icon.ToLower()}") Text="@Name" Style="max-width: 4rem"/>
    </Tooltip>
</Link>



@code {
    [Parameter] public required string Name { get; set; }
    [Parameter] public required string Icon { get; set; }
    [Parameter] public required string Link { get; set; }
}
